@model Hospital.Models.Pmodels;
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Hospittal Management</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

</head>
<body>
    <form asp-action="Muthu" style="width:50%;border:2px solid black;color:black; margin-left:200px;padding:20px " >

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/Home/Index">Hospital Management</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="/Home/Muthu">AddPatients</a>
                </li>
                <li class="nav-item active" >
                    <a class="nav-link" href="/Home/Display">DisplayPatients</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="#">UpdatePatients</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/Home/Display">DeletePatients</a>
                </li>
            </ul>
        </div>
    </nav>
        <div class="form-group">
            <label asp-for="First_Name">First Name</label>
            <input asp-for="First_Name" type="text" class="form-control" placeholder="Enter First Name">
            <span asp-validation-for="First_Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Last_Name">Last Name</label>
            <input asp-for="Last_Name" type="text" class="form-control" placeholder="Enter Last Name">
            <span asp-validation-for="Last_Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Phone_Number">Phone Number</label>
            <input asp-for="Phone_Number" type="number" class="form-control">
            <span asp-validation-for="Phone_Number"></span>
        </div>
       
        <button type="submit" class="btn btn-primary" style="background-color:green">Submit</button>
        <div>
            @if(TempData["hii"]!=null){
                <h2>@TempData["hii"]</h2>

            }
            
        </div>


    </form>
</body>
</html>